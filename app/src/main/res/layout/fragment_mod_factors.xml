<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="0dp"
	android:layout_margin="0dp"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content" >

    <!--Navigation controls-->
	<RelativeLayout
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
		<TextView style="@style/TextViewBack"
            android:id="@+id/TextViewBackToAlgorithms" />
		<TextView style="@style/TextViewFragmentTitle"
            android:id="@+id/TextViewTitle"
            android:text="@string/mod_factors_title" />
        <TextView style="@style/TextViewDocumentationFile"
            android:id="@+id/TextViewDocumentationFile" />
	</RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Create this in order the clearFocus() on edittext to work-->
            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0px"
                android:layout_height="0px"
                tools:ignore="UselessLeaf" />

            <!--Extended inputGroup view-->
            <LinearLayout style="@style/ColumnContainerStyle"
                android:id="@+id/LinearLayoutExtendedInputView"
                android:layout_marginBottom="20dp">
                <!--InputGroup integer n:-->
                <LinearLayout style="@style/RowContainerStyle">
                    <TextView style="@style/TextViewLabelInputStyle"
                        android:id="@+id/TextViewLabelN"
                        android:text="@string/label_n"
                        android:labelFor="@+id/EditTextN" />
                    <TextView style="@style/TextViewLabelElasticStyle"
                        android:id="@+id/TextViewLabelElasticN"  />
                    <TextView style="@style/ClipboardButtonCopyStyle"
                        android:id="@+id/TextViewCopyN" />
                    <TextView style="@style/ClipboardButtonPasteStyle"
                        android:id="@+id/TextViewPasteN"  />
                    <TextView style="@style/ClipboardButtonClearStyle"
                        android:id="@+id/TextViewClearN"  />
                </LinearLayout>
                <EditText style="@style/EditTextNumberPositiveInputStyle"
                    android:id="@+id/EditTextN"
                    android:autofillHints=""
                    android:layout_marginBottom="10dp"/>

                <!--InputGroup integer a:-->
                <LinearLayout style="@style/RowContainerStyle">
                    <TextView style="@style/TextViewLabelInputStyle"
                        android:id="@+id/TextViewLabelA"
                        android:text="@string/label_a"
                        android:labelFor="@+id/EditTextA" />
                    <TextView style="@style/TextViewLabelElasticStyle"
                        android:id="@+id/TextViewLabelElasticA"  />
                    <TextView style="@style/ClipboardButtonCopyStyle"
                        android:id="@+id/TextViewCopyA" />
                    <TextView style="@style/ClipboardButtonPasteStyle"
                        android:id="@+id/TextViewPasteA"  />
                    <TextView style="@style/ClipboardButtonClearStyle"
                        android:id="@+id/TextViewClearA"  />
                </LinearLayout>
                <EditText style="@style/EditTextNumberPositiveInputStyle"
                    android:id="@+id/EditTextA"
                    android:autofillHints="" />
            </LinearLayout>

            <!--Compact inputGroup view-->
            <LinearLayout style="@style/ColumnContainerStyle"
                android:id="@+id/LinearLayoutCompactInputView"
                android:layout_marginBottom="20dp">
                <!--InputGroup integer n:-->
                <LinearLayout style="@style/RowContainerStyle"
                    android:layout_marginBottom="10dp">
                    <TextView style="@style/TextViewLabelCompactStyle"
                        android:id="@+id/TextViewLabelCompactN"
                        android:text="@string/label_n" />
                    <EditText style="@style/EditTextNumberInputCompactStyle"
                        android:id="@+id/EditTextCompactN"
                        android:autofillHints="@string/empty" />
                    <TextView style="@style/ClipboardButtonCopyMiddleCompactStyle"
                        android:id="@+id/TextViewCopyCompactN" />
                    <TextView style="@style/ClipboardButtonPasteMiddleCompactStyle"
                        android:id="@+id/TextViewPasteCompactN" />
                    <TextView style="@style/ClipboardButtonClearMiddleCompactStyle"
                        android:id="@+id/TextViewClearCompactN" />
                </LinearLayout>

                <!--InputGroup integer a:-->
                <LinearLayout style="@style/RowContainerStyle">
                    <TextView style="@style/TextViewLabelCompactStyle"
                        android:id="@+id/TextViewLabelCompactA"
                        android:text="@string/label_a" />
                    <EditText style="@style/EditTextNumberInputCompactStyle"
                        android:id="@+id/EditTextCompactA"
                        android:autofillHints="@string/empty" />
                    <TextView style="@style/ClipboardButtonCopyMiddleCompactStyle"
                        android:id="@+id/TextViewCopyCompactA" />
                    <TextView style="@style/ClipboardButtonPasteMiddleCompactStyle"
                        android:id="@+id/TextViewPasteCompactA" />
                    <TextView style="@style/ClipboardButtonClearMiddleCompactStyle"
                        android:id="@+id/TextViewClearCompactA" />
                </LinearLayout>
            </LinearLayout>


            <!--Examples-->
            <LinearLayout style="@style/RowContainerStyle"
                android:id="@+id/LinearLayoutExamplesContainer">
                <Button style="@style/ButtonExampleFirstStyle"
                    android:id="@+id/ButtonRunExample1"
                    android:text="@string/run_example_1" />
                <Button style="@style/ButtonExampleStyle"
                    android:id="@+id/ButtonRunExample2"
                    android:text="@string/run_example_2" />
                <Button style="@style/ButtonExampleStyle"
                    android:id="@+id/ButtonRunExample3"
                    android:text="@string/run_example_3" />
                <Button style="@style/ButtonExampleStyle"
                    android:id="@+id/ButtonRunExample4"
                    android:text="@string/run_example_4" />
                <Button style="@style/ButtonExampleStyle"
                    android:id="@+id/ButtonRunExample5"
                    android:text="@string/run_example_5" />
                <Button style="@style/ButtonExampleLastStyle"
                    android:id="@+id/ButtonRunExample6"
                    android:text="@string/run_example_6" />
            </LinearLayout>


            <!--Buttons run-->
            <LinearLayout style="@style/RowContainerStyle">
                <Button style="@style/ButtonRunStyle"
                    android:id="@+id/ButtonRun"
                    android:text="@string/mod_factors_run_short"
                    android:layout_marginRight="5dp"
                    tools:ignore="RtlHardcoded" />
                <Button style="@style/ButtonRunStyle"
                    android:id="@+id/ButtonCountRun"
                    android:text="@string/mod_factors_count_run_short"
                    android:layout_marginLeft="5dp"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>


            <!--Result-->
            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <TextView style="@style/TextViewLabelResultStyle"
                    android:id="@+id/TextViewLabelResult"
                    android:text="@string/result"
                    android:labelFor="@+id/EditTextResult" />
                <TextView style="@style/TextViewLabelElasticStyle"
                    android:id="@+id/TextViewLabelElasticResult"  />
                <TextView style="@style/ClipboardButtonExpandResultStyle"
                    android:id="@+id/TextViewExpandResult"  />
                <TextView style="@style/ClipboardButtonCopyStyle"
                    android:id="@+id/TextViewCopyResult" />
                <TextView style="@style/ClipboardButtonClearStyle"
                    android:id="@+id/TextViewClearResult"  />
            </LinearLayout>
            <LinearLayout style="@style/ResultContainer">
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText android:id="@+id/EditTextResult"
                        style="@style/EditTextResult"
                        android:typeface="monospace"
                        android:autofillHints="" />
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>