<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/LinearLayoutProgress"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="center_horizontal|top"
	android:background="#CC000000"
	android:gravity="center">

    <ProgressBar style="?android:attr/progressBarStyle"
        android:id="@+id/ProgressBarSpin"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:indeterminate="true"
		android:progressTint="@color/colorGeneralBg"
		android:indeterminateTint="@color/colorGeneralBg" />

    <Chronometer
		android:id="@+id/ChronometerProgress"
        android:textColor="@color/colorGeneralBg"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

	<TextView
	    android:layout_marginTop="15dp"
		android:textSize="12sp"
		android:textColor="@color/colorGeneralBg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:text="@string/please_wait" />

	<ProgressBar style="?android:progressBarStyleHorizontal"
		android:id="@+id/ProgressBarPercentage"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="70dp"
		android:layout_marginTop="2dp"
		android:indeterminate="false"
		android:progressTint="@color/colorGeneralBg"
		android:indeterminateTint="@color/colorGeneralBg"
		android:max="100"
		android:minHeight="2dp"
		android:maxHeight="2dp"
		android:visibility="invisible"
		tools:visibility="visible" />

	<TextView
		android:id="@+id/TextViewProgressCancel"
		android:background="@drawable/progress_cancel_button_bg"
		android:text="@string/progress_dialog_cancel"
		android:paddingLeft="20dp"
		android:paddingTop="10dp"
		android:paddingRight="20dp"
		android:paddingBottom="10dp"
		android:layout_margin="15dp"
		android:textSize="14sp"
		android:textColor="@color/colorGeneralBg"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
		<!--android:background="@drawable/progress_cancel_button_bg"-->

</LinearLayout>
