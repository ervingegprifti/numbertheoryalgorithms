<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:padding="0dp"
	android:background="@color/colorGeneralBg"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<RelativeLayout
		android:paddingLeft="20dp"
		android:paddingTop="10dp"
		android:paddingRight="20dp"
		android:paddingBottom="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView style="@style/TextViewBack"
			android:id="@+id/TextViewLinearCongruenceInTwoVariablesBackToAlgorithms"  />
		<TextView style="@style/TextViewFragmentTitle"
			android:id="@+id/TextViewLinearCongruenceInTwoVariablesTitle"
			android:text="@string/linear_congruence_in_two_variables_title"  />
		<TextView style="@style/TextViewDocumentationFile"
			android:id="@+id/TextViewLinearCongruenceInTwoVariablesDocumentationFile"  />
	</RelativeLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:paddingTop="10dp"
			android:paddingBottom="20dp"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<!--Create this in order the clearFocus() on edittext to work-->
			<LinearLayout
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:layout_width="0px"
				android:layout_height="0px"
				tools:ignore="UselessLeaf" />


			<!--Extended inputGroup view-->
			<LinearLayout style="@style/ColumnContainerStyle"
				android:id="@+id/LinearLayoutExtendedInputView"
				android:layout_marginBottom="20dp">
				<!--InputGroup integer a:-->
				<LinearLayout style="@style/RowContainerStyle">
					<TextView style="@style/TextViewLabelInputStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesLabelA"
						android:text="@string/label_a"
						android:labelFor="@+id/EditTextLinearCongruenceInTwoVariablesA" />
					<TextView style="@style/TextViewLabelElasticStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesLabelElasticA"  />
					<TextView style="@style/ClipboardButtonCopyStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesCopyA" />
					<TextView style="@style/ClipboardButtonPasteStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesPasteA"  />
					<TextView style="@style/ClipboardButtonClearStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesClearA"  />
				</LinearLayout>
				<EditText style="@style/EditTextNumberInputStyle"
					android:id="@+id/EditTextLinearCongruenceInTwoVariablesA"
					android:autofillHints=""
					android:layout_marginBottom="20dp"/>

				<!--InputGroup integer b:-->
				<LinearLayout style="@style/RowContainerStyle">
					<TextView style="@style/TextViewLabelInputStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesLabelB"
						android:text="@string/label_b"
						android:labelFor="@+id/EditTextLinearCongruenceInTwoVariablesB" />
					<TextView style="@style/TextViewLabelElasticStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesLabelElasticB"  />
					<TextView style="@style/ClipboardButtonCopyStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesCopyB" />
					<TextView style="@style/ClipboardButtonPasteStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesPasteB"  />
					<TextView style="@style/ClipboardButtonClearStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesClearB"   />
				</LinearLayout>
				<EditText style="@style/EditTextNumberInputStyle"
					android:id="@+id/EditTextLinearCongruenceInTwoVariablesB"
					android:autofillHints=""
					android:layout_marginBottom="20dp" />

				<!--InputGroup integer c:-->
				<LinearLayout style="@style/RowContainerStyle">
					<TextView style="@style/TextViewLabelInputStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesLabelC"
						android:text="@string/label_c"
						android:labelFor="@+id/EditTextLinearCongruenceInTwoVariablesC" />
					<TextView style="@style/TextViewLabelElasticStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesLabelElasticC"  />
					<TextView style="@style/ClipboardButtonCopyStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesCopyC" />
					<TextView style="@style/ClipboardButtonPasteStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesPasteC"  />
					<TextView style="@style/ClipboardButtonClearStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesClearC"   />
				</LinearLayout>
				<EditText style="@style/EditTextNumberInputStyle"
					android:id="@+id/EditTextLinearCongruenceInTwoVariablesC"
					android:autofillHints=""
					android:layout_marginBottom="20dp"/>

				<!--InputGroup integer m:-->
				<LinearLayout style="@style/RowContainerStyle">
					<TextView style="@style/TextViewLabelInputStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesLabelM"
						android:text="@string/label_m"
						android:labelFor="@+id/EditTextLinearCongruenceInTwoVariablesM" />
					<TextView style="@style/TextViewLabelElasticStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesLabelElasticM"  />
					<TextView style="@style/ClipboardButtonCopyStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesCopyM" />
					<TextView style="@style/ClipboardButtonPasteStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesPasteM"  />
					<TextView style="@style/ClipboardButtonClearStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesClearM"  />
				</LinearLayout>
				<EditText style="@style/EditTextNumberPositiveInputStyle"
					android:id="@+id/EditTextLinearCongruenceInTwoVariablesM"
					android:autofillHints="" />
			</LinearLayout>


			<!--Compact inputGroup view-->
			<LinearLayout style="@style/ColumnContainerStyle"
				android:id="@+id/LinearLayoutCompactInputView"
				android:layout_marginBottom="20dp">
				<!--InputGroup integer a:-->
				<LinearLayout style="@style/RowContainerStyle"
					android:layout_marginBottom="10dp">
					<TextView style="@style/TextViewLabelCompactStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesLabelCompactA"
						android:text="@string/label_a" />
					<EditText style="@style/EditTextNumberInputCompactStyle"
						android:id="@+id/EditTextLinearCongruenceInTwoVariablesCompactA"
						android:autofillHints="@string/empty" />
					<TextView style="@style/ClipboardButtonCopyMiddleCompactStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesCopyCompactA" />
					<TextView style="@style/ClipboardButtonPasteMiddleCompactStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesPasteCompactA" />
					<TextView style="@style/ClipboardButtonClearMiddleCompactStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesClearCompactA" />
				</LinearLayout>

				<LinearLayout style="@style/RowContainerStyle"
					android:layout_marginBottom="10dp">
					<TextView style="@style/TextViewLabelCompactStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesLabelCompactB"
						android:text="@string/label_b" />
					<EditText style="@style/EditTextNumberInputCompactStyle"
						android:id="@+id/EditTextLinearCongruenceInTwoVariablesCompactB"
						android:autofillHints="@string/empty" />
					<TextView style="@style/ClipboardButtonCopyMiddleCompactStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesCopyCompactB" />
					<TextView style="@style/ClipboardButtonPasteMiddleCompactStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesPasteCompactB" />
					<TextView style="@style/ClipboardButtonClearMiddleCompactStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesClearCompactB" />
				</LinearLayout>

				<LinearLayout style="@style/RowContainerStyle"
					android:layout_marginBottom="10dp">
					<TextView style="@style/TextViewLabelCompactStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesLabelCompactC"
						android:text="@string/label_c" />
					<EditText style="@style/EditTextNumberInputCompactStyle"
						android:id="@+id/EditTextLinearCongruenceInTwoVariablesCompactC"
						android:autofillHints="@string/empty" />
					<TextView style="@style/ClipboardButtonCopyMiddleCompactStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesCopyCompactC" />
					<TextView style="@style/ClipboardButtonPasteMiddleCompactStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesPasteCompactC" />
					<TextView style="@style/ClipboardButtonClearMiddleCompactStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesClearCompactC" />
				</LinearLayout>

				<LinearLayout style="@style/RowContainerStyle">
					<TextView style="@style/TextViewLabelCompactStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesLabelCompactM"
						android:text="@string/label_m" />
					<EditText style="@style/EditTextNumberPositiveInputCompactStyle"
						android:id="@+id/EditTextLinearCongruenceInTwoVariablesCompactM"
						android:autofillHints="@string/empty" />
					<TextView style="@style/ClipboardButtonCopyMiddleCompactStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesCopyCompactM" />
					<TextView style="@style/ClipboardButtonPasteMiddleCompactStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesPasteCompactM" />
					<TextView style="@style/ClipboardButtonClearMiddleCompactStyle"
						android:id="@+id/TextViewLinearCongruenceInTwoVariablesClearCompactM" />
				</LinearLayout>
			</LinearLayout>


			<!--Buttons run-->
			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal">
				<Button style="@style/ButtonRunStyle"
					android:id="@+id/ButtonLinearCongruenceInTwoVariablesRun"
					android:text="@string/linear_congruence_in_two_variables_run_short" />
				<Button style="@style/ButtonExampleAfterRunStyle"
					android:id="@+id/ButtonLinearCongruenceInTwoVariablesRunExample1"
					android:text="@string/run_example_1" />
				<Button style="@style/ButtonExampleAfterRunStyle"
					android:id="@+id/ButtonLinearCongruenceInTwoVariablesRunExample2"
					android:text="@string/run_example_2" />
				<Button style="@style/ButtonExampleAfterRunStyle"
					android:id="@+id/ButtonLinearCongruenceInTwoVariablesRunExample3"
					android:text="@string/run_example_3" />
			</LinearLayout>

			<!--Result-->
			<LinearLayout
				android:layout_marginTop="20dp"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal">
				<TextView style="@style/TextViewLabelResultStyle"
					android:id="@+id/TextViewLinearCongruenceInTwoVariablesLabelResult"
					android:text="@string/result"
					android:labelFor="@+id/EditTextLinearCongruenceInTwoVariablesResult" />
				<TextView style="@style/TextViewLabelElasticStyle"
					android:id="@+id/TextViewLinearCongruenceInTwoVariablesLabelElasticResult" />
				<TextView style="@style/ClipboardButtonExpandResultStyle"
					android:id="@+id/TextViewLinearCongruenceInTwoVariablesExpandResult" />
				<TextView style="@style/ClipboardButtonCopyStyle"
					android:id="@+id/TextViewLinearCongruenceInTwoVariablesCopyResult" />
				<TextView style="@style/ClipboardButtonClearStyle"
					android:id="@+id/TextViewLinearCongruenceInTwoVariablesClearResult" />
			</LinearLayout>
			<LinearLayout style="@style/ResultContainer" >
				<HorizontalScrollView
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<EditText style="@style/EditTextResult"
						android:id="@+id/EditTextLinearCongruenceInTwoVariablesResult"
						android:typeface="monospace"
						android:autofillHints="" />
				</HorizontalScrollView>
			</LinearLayout>

		</LinearLayout>
	</ScrollView>
</LinearLayout>