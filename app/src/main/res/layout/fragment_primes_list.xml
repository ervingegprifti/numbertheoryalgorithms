<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:padding="0dp"
	android:layout_margin="0dp"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content" >

	<RelativeLayout
		android:paddingLeft="20dp"
		android:paddingTop="10dp"
		android:paddingRight="20dp"
		android:paddingBottom="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView style="@style/TextViewBack"
			android:id="@+id/TextViewBackToAlgorithms"  />
		<TextView style="@style/TextViewFragmentTitle"
			android:id="@+id/TextViewTitle"
			android:text="@string/primes_list_title"  />
	</RelativeLayout>

	<LinearLayout
		android:paddingLeft="20dp"
		android:paddingRight="20dp"
		android:paddingTop="10dp"
		android:paddingBottom="0dp"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<!--Create this in order the clearFocus() on edittext to work-->
		<LinearLayout
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:layout_width="0px"
			android:layout_height="0px"
			tools:ignore="UselessLeaf" />


		<!--Compact inputGroup view-->
		<LinearLayout style="@style/ColumnContainerStyle"
			android:layout_marginBottom="20dp">
			<!--InputGroup integer k-->
			<LinearLayout style="@style/RowContainerStyle">
				<TextView style="@style/TextViewLabelCompactStyle"
					android:id="@+id/TextViewLabelCompactK"
					android:labelFor="@+id/EditTextCompactK"
					android:text="@string/label_k" />
				<EditText style="@style/EditTextNumberInputCompactStyle"
					android:id="@+id/EditTextCompactK"
					android:autofillHints=""
					android:enabled="false"/>
				<TextView style="@style/ClipboardButtonMinusMiddleCompactStyle"
					android:id="@+id/TextViewMinusCompactK" />
				<TextView style="@style/ClipboardButtonPlusRightCompactStyle"
					android:id="@+id/TextViewPlusCompactK" />
			</LinearLayout>
		</LinearLayout>


		<!--Result-->
		<LinearLayout style="@style/RowContainerStyle">
			<TextView style="@style/TextViewLabelResultStyle"
				android:id="@+id/TextViewLabelResult" android:text="@string/result" />
			<TextView style="@style/TextViewLabelElasticStyle"
				android:id="@+id/TextViewLabelElasticResult" />
			<TextView style="@style/ClipboardButtonExpandResultStyle"
				android:id="@+id/TextViewExpandResult" />
			<TextView style="@style/ClipboardButtonClearStyle"
				android:id="@+id/TextViewClearResult" />
		</LinearLayout>

		<LinearLayout style="@style/ResultContainer">
			<HorizontalScrollView
				android:scrollbarStyle="outsideInset"
				android:scrollbarSize="3dp"
				android:paddingBottom="0dp"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/LinearLayoutStaticColumnHeader"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"/>
					<ListView
						android:id="@+id/ListViewResult"
						android:divider="@android:color/transparent"
						android:listSelector="@android:color/transparent"
						android:cacheColorHint="@android:color/transparent"
						android:scrollbarStyle="insideInset"
						android:scrollbarSize="3dp"
						android:smoothScrollbar="true"
						android:layout_width="wrap_content"
						android:layout_height="match_parent">
					</ListView>
				</LinearLayout>
			</HorizontalScrollView>

		</LinearLayout>
	</LinearLayout>
</LinearLayout>