<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:padding="0dp"
	android:background="@color/colorGeneralBg"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<RelativeLayout
		android:paddingLeft="20dp"
		android:paddingTop="10dp"
		android:paddingRight="20dp"
		android:paddingBottom="10dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView style="@style/TextViewBack"
			android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesBackToAlgorithms"  />
		<TextView style="@style/TextViewFragmentTitle"
			android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesTitle"
			android:text="@string/linear_diophantine_equation_in_two_variables_title" />
		<TextView style="@style/TextViewDocumentationFile"
			android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesDocumentationFile"  />
	</RelativeLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:paddingTop="10dp"
			android:paddingBottom="20dp"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<!--Create this in order the clearFocus() on edittext to work-->
			<LinearLayout
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:layout_width="0px"
				android:layout_height="0px"
				tools:ignore="UselessLeaf" />

			<!--Big integer a:-->
			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal">
				<TextView style="@style/TextViewLabelInputStyle"
					android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesLabelA"
					android:text="@string/label_a"
					android:labelFor="@+id/EditTextLinearDiophantineEquationInTwoVariablesA" />
				<TextView style="@style/TextViewLabelElasticStyle"
					android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesLabelElasticA"  />
				<TextView style="@style/ClipboardButtonCopyStyle"
					android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesCopyA" />
				<TextView style="@style/ClipboardButtonPasteStyle"
					android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesPasteA"  />
				<TextView style="@style/ClipboardButtonClearStyle"
					android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesClearA"  />
			</LinearLayout>
			<EditText style="@style/EditTextNumberInputStyle"
				android:id="@+id/EditTextLinearDiophantineEquationInTwoVariablesA"
				android:autofillHints="" />

			<!--Big integer b:-->
			<LinearLayout
				android:layout_marginTop="15dp"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal">
				<TextView style="@style/TextViewLabelInputStyle"
					android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesLabelB"
					android:text="@string/label_b"
					android:labelFor="@+id/EditTextLinearDiophantineEquationInTwoVariablesB" />
				<TextView style="@style/TextViewLabelElasticStyle"
					android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesLabelElasticB"  />
				<TextView style="@style/ClipboardButtonCopyStyle"
					android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesCopyB" />
				<TextView style="@style/ClipboardButtonPasteStyle"
					android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesPasteB"  />
				<TextView style="@style/ClipboardButtonClearStyle"
					android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesClearB"   />
			</LinearLayout>
			<EditText style="@style/EditTextNumberInputStyle"
				android:id="@+id/EditTextLinearDiophantineEquationInTwoVariablesB"
				android:autofillHints="" />

			<!--Big integer c:-->
			<LinearLayout
				android:layout_marginTop="15dp"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal">
				<TextView style="@style/TextViewLabelInputStyle"
					android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesLabelC"
					android:text="@string/label_c"
					android:labelFor="@+id/EditTextLinearDiophantineEquationInTwoVariablesC" />
				<TextView style="@style/TextViewLabelElasticStyle"
					android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesLabelElasticC" />
				<TextView style="@style/ClipboardButtonCopyStyle"
					android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesCopyC" />
				<TextView style="@style/ClipboardButtonPasteStyle"
					android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesPasteC" />
				<TextView style="@style/ClipboardButtonClearStyle"
					android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesClearC" />
			</LinearLayout>
			<EditText style="@style/EditTextNumberInputStyle"
				android:id="@+id/EditTextLinearDiophantineEquationInTwoVariablesC"
				android:autofillHints="" />

			<!--Buttons run-->
			<LinearLayout
				android:layout_marginTop="20dp"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal">
				<Button style="@style/ButtonRunStyle"
					android:id="@+id/ButtonLinearDiophantineEquationInTwoVariablesRun"
					android:text="@string/linear_diophantine_equation_in_two_variables_run_short"  />
				<Button style="@style/ButtonExampleAfterRunStyle"
					android:id="@+id/ButtonLinearDiophantineEquationInTwoVariablesRunExample1"
					android:text="@string/run_example_1"  />
				<Button style="@style/ButtonExampleAfterRunStyle"
					android:id="@+id/ButtonLinearDiophantineEquationInTwoVariablesRunExample2"
					android:text="@string/run_example_2"  />
				<Button style="@style/ButtonExampleAfterRunStyle"
					android:id="@+id/ButtonLinearDiophantineEquationInTwoVariablesRunExample3"
					android:text="@string/run_example_3"  />
			</LinearLayout>

			<!--Result-->
			<LinearLayout
				android:layout_marginTop="20dp"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal">
				<TextView style="@style/TextViewLabelResultStyle"
					android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesLabelResult"
					android:text="@string/result" />
				<TextView style="@style/TextViewLabelElasticStyle"
					android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesLabelElasticResult" />
				<TextView style="@style/ClipboardButtonExpandResultStyle"
					android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesExpandResult" />
				<TextView style="@style/ClipboardButtonCopyStyle"
					android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesCopyResult" />
				<TextView style="@style/ClipboardButtonClearStyle"
					android:id="@+id/TextViewLinearDiophantineEquationInTwoVariablesClearResult" />
			</LinearLayout>
			<LinearLayout style="@style/ResultContainer">
				<HorizontalScrollView
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<EditText style="@style/EditTextResult"
						android:id="@+id/EditTextLinearDiophantineEquationInTwoVariablesResult"
						android:typeface="monospace"
						android:autofillHints="" />
				</HorizontalScrollView>
			</LinearLayout>

		</LinearLayout>
	</ScrollView>
</LinearLayout>