<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape >
            <solid android:color="@color/colorLightButtonBg" />
            <stroke android:width="1px" android:color="@color/colorInsideTextStrokeBg" />
            <padding android:left="5dp" android:top="2dp" android:bottom="2dp" android:right="5dp"  />
            <corners android:topLeftRadius="5dp" android:topRightRadius="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <solid android:color="@color/colorLightButtonBg" />
            <stroke android:width="1px" android:color="@color/colorInsideTextStrokeBg" />
            <padding android:left="5dp" android:top="2dp" android:bottom="2dp" android:right="5dp"  />
            <corners android:topLeftRadius="5dp" android:topRightRadius="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/colorLightButtonBg" />
            <stroke android:width="1px" android:color="@color/colorInsideTextStrokeBg" />
            <padding android:left="5dp" android:top="2dp" android:bottom="2dp" android:right="5dp"  />
            <corners android:topLeftRadius="5dp" android:topRightRadius="5dp" />
        </shape>
    </item>




</selector>