<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape >
            <solid android:color="@color/clipboardButtonPressedBg"/>
            <corners android:radius="5dp"/>
            <padding android:left="6dp" android:top="2dp" android:right="6dp" android:bottom="2dp"/>
        </shape>
    </item>

    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/clipboardButtonSelectedBg"/>
            <corners android:radius="5dp"/>
            <padding android:left="6dp" android:top="2dp" android:right="6dp" android:bottom="2dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/clipboardButtonBg"/>
            <corners android:radius="5dp"/>
            <padding android:left="6dp" android:top="2dp" android:right="6dp" android:bottom="2dp"/>
        </shape>
    </item>

</selector>